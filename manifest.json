{
  "manifest_version": 3,
  "name": "Ghostwriter for Gmail",
  "description": "AI-powered email drafting with Claude Sonnet 4.5",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": [
        "dist/content.bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pageWorld.js",
        "assets/icons/icon.png"
      ],
      "matches": [
        "*://mail.google.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/icons/icon.png"
  },
  "icons": {
    "128": "assets/icons/icon.png"
  }
}